NAME = phonebook
SRC = PhoneBook.class.cpp main.cpp
FLAGS = -Wall -Werror -Wextra

all:
	clang++ $(FLAGS) -o $(NAME) $(SRC)
fclean:
	rm $(NAME)
re: fclean all